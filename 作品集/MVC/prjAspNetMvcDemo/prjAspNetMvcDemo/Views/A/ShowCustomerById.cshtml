
@{
    ViewBag.Title = "ShowCustomerById";
}

<h2>客戶資料查詢結果</h2>
<hr />
@*<p><img src="~/Content/@(ViewBag.ii).jpg" width="400" height="300" /></p>*@
<p>
   
    <img src="~/Content/@ViewBag.Img" width="400" height="300" />
</p>
@{
    if (ViewBag.customer == null)
    {
        @:沒有客戶資料
    }
    else
    {
        @:客戶姓名：@ViewBag.customer.fName
        <p>
            客戶電話：@ViewBag.customer.fPhone
        </p>
    }

}


